<%= render 'shared/landing/banner_content' %>

<hr></hr>

<div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
  <div class="col-lg-12">
    <div class="white-box">
      <div class="main-title-head">
        <h3 class="tittle"><i class="glyphicon glyphicon-file"></i>Noticias</h3>
      </div>
      <center>
        <div class="row">
          <% @decorated_articles.each do |a|%>
            <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12">
              <div class="card">
                <%= link_to image_tag(a.first_image), article_path(a), class: "card-img-top img"%>
                <div class="card-body">
                    <%= link_to a.headline, article_path(a), class: 'wd'  %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </center>
    </div>
  </div>
</div>

