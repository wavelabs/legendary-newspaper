<div class="col-lg-12" id="conteiner-carrousel">
  <div class="row">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <!-- Wrapper for slides -->
      <div class="carousel-inner">
        <div class="item active">
          <div class="art-img">
            <%= image_tag @carrousel_articles.first.first_image, class: "img-size" %>
          </div>
          <div class="art-info">
            <h5 class="uno"><%= @carrousel_articles.first.section.name %></h5>
            <h1 class="dos"><%= @carrousel_articles.first.headline %></h1>
            <div class="line">_______</div>
            <h4 class="tres"><%= @carrousel_articles.first.lead %></h4>
          </div>
        </div>

        <% @carrousel_articles.except(@carrousel_articles.first).each do |a|%>
          <div class="item">
            <div class="art-img">
              <%= image_tag a.first_image, class: "img-size" %>
            </div>
            <div class="art-info">
              <h5 class="uno"><%= a.section.name %></h5>
              <h1 class="dos"><%= a.headline %></h1>
              <div class="line">_______</div>
              <h4 class="tres"><%= a.lead %></h4>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Left and right controls -->
      <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>
