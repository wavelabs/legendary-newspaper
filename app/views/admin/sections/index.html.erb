<% if notice %>
  <div class="alert alert-success" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <%= notice %>
  </div>
<% end %>

<h1>Secciones</h1>

<table>
  <thead>
    <tr>
      <th><strong>Nombre</strong></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.name %></td>
        <td><%= link_to 'Ver', admin_section_path(section) %></td>
        <td><%= link_to 'Editar', edit_admin_section_path(section) %></td>
        <td><%= link_to 'Eliminar', admin_section_path(section), method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

