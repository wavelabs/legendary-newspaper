<%= form_with(model: [ :admin, article ], local: true) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> impidieron que este artículo se guardara:</h2>

      <ul>
      <% article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label "Título" %>
    <%= form.text_field :headline, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label "Copete" %>
    <%= form.text_field :lead, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label "Cuerpo" %>
    <%= form.text_area :body, class: 'form-control tinymce', rows: 40, cols: 12 %>
  </div>

  <div class="form-group">
    <%= form.label "Sección" %>
    <%= form.select :section_id, sections_for_select, { include_blank: "Seleccionar Sección" }, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label "Autor" %>
    <%= form.select :author_id, authors_for_select, { include_blank: "Seleccionar Autor" }, class: 'form-control' %>
  </div>


  <div class="form-group">
    <%= form.fields_for :images do |g| %>
        <%= render 'image_fields', f: g %>
        <%= link_to_add_association 'Agregar Imagen', form, :images, class: "btn btn-success links" %>
    <% end %>
  </div>

  <div class="form-group">
    <center><%= form.label "Publicar?" %></center>
    <%= form.check_box :published, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
