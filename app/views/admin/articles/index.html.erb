<% if notice %>
  <div class="alert alert-success" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <%= notice %>
  </div>
<% end %>

<h1>Artículos</h1>

<table>
  <thead>
    <tr>
      <th><strong>Titulo</strong></th>
      <th><strong>Aprobado?</strong></th>
      <th><strong>Sección</strong></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @decorated_articles.each do |article| %>
      <tr>
        <td><%= article.headline %></td>
        <td><%= article.is_published? %></td>
        <td><%= article.section_name %></td>
        <td><%= link_to 'Ver', edit_admin_article_path(article) %></td>
        <td><%= link_to 'Eliminar', admin_article_path(article), method: :delete, data: { confirm: 'Está Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Artículo', new_admin_article_path %>
