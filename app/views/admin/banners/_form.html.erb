<%= form_with(model: [:admin, banner], local: true) do |form| %>

  <% if banner.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(banner.errors.count, "error") %> prohibited this banner from being saved:</h2>
      <ul>
        <% banner.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= form.label "Posicion" %>
    <%= form.select :position, enum_options_for_select(Banner, :position) %>
  </div>

  <%= form.fields_for :image do |img_form| %>
    <div class="form-group">
      <%= img_form.label :picture, 'Imagen' %>
      <%= img_form.file_field  :picture, id: "files" %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit 'Guardar'%>
  </div>
<% end %>
