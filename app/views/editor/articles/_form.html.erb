<%= form_with(model: [ :editor, article ], local: true) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> impidieron que este artículo se guardara:</h2>

      <ul>
      <% article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label "Título" %>
    <%= form.text_field :headline, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label "Copete" %>
    <%= form.text_field :lead, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label "Cuerpo" %>
    <%= form.text_area :body, rows: 5, class: 'form-control' %>
  </div>

  <%= form.fields_for :image do |f| %>
    <div class="form-group">
      <%= f.label "Nombre de Archivo" %>
      <%= f.text_field :filename, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.filestack_field :filepicker_url, 'Cargar una Imagen', dragdrop: true %>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label "Sección" %>
    <%= form.select :section_id, sections_for_select, { include_blank: "Seleccionar Sección" }, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label "Autor" %>
    <%= form.select :author_id, authors_for_select, { include_blank: "Seleccionar Autor" }, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit "Crear Artículo" %>
  </div>
<% end %>
