<% if notice %>
  <div class="alert alert-success" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <%= notice %>
  </div>
<% end %>

<p>
  <strong>Sección:</strong><br>
  <%= @decorated_article.section_name %>
</p>

<p>
  <strong>Autor:</strong><br>
  <%= @decorated_article.author_name %>
</p>

<p>
  <strong>Título:</strong><br>
  <%= @decorated_article.headline %>
</p>

<p>
  <strong>Copete:</strong><br>
  <%= @decorated_article.lead %>
</p>

<p>
  <strong>Cuerpo:</strong><br>
  <%= @decorated_article.body %>
</p>

<p>
  <strong>Aprobado?</strong><br>
  <%= @decorated_article.is_published? %>
</p>

<%= link_to 'Editar', edit_editor_article_path(@article) %> |
<%= link_to 'Volver', editor_articles_path %>
