<div class="nested-fields">
  <div class="row">
    <div class="form-group field col-lg-4">
      <%= f.file_field :picture, class: 'form-control' %>
    </div>

    <div class="form-group field col-lg-4">
      <%= f.text_field :description, placeholder: 'Descripcion de Imagen', class: 'form-control' %>
    </div>

    <div class="form-group col-lg-4">
      <%= link_to_remove_association "Quitar Imagen", f, class: "btn btn-danger btn-add-img" %>
    </div>
  </div>
</div>
