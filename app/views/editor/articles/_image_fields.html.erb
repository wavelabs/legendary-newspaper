<div class="nested-fields">
  <div class="form-group field">
    <%= f.label 'Archivo de Imagen' %>
    <%= f.file_field :picture, class: 'form-control' %>
  </div>

  <div class="form-group field">
    <%= f.label 'Descripcion de Imagen' %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>

  <%= link_to_remove_association "Quitar Imagen", f, class: "btn btn-danger btn-add-img" %>
</div>
