<div class="header" id="home">
   <div class="content white">
    <nav class="navbar navbar-default" role="navigation">
      <div class="container navbar-container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <div class="logo-header">
            <%= link_to image_tag('BuenaOnda.png'), root_path, class: "navbar-brand logo-nav-bar" %>
          </div>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <% sections = Section.with_articles %>
          <ul class="nav navbar-nav navbar-mobile" style="display: none;">
            <li><%= link_to 'Tapa', root_path %></li>
            <% sections.each do |section| %>
              <li><%= link_to section.name, articles_section_path(section) %></li>
            <% end %>
          </ul>

          <ul class="nav navbar-nav navbar-medium-devise" style="display: none;">
            <li><%= link_to 'Tapa', root_path %></li>
            <%if sections.count < 3 %>
              <% sections.each do |section| %>
                <li><%= link_to section.name, articles_section_path(section) %></li>
              <% end %>
            <% else %>
              <% first_sections = sections.first(3) %>
              <% last_sections = sections.reject { |section| first_sections.include?(section) } %>

              <% first_sections.each do |section| %>
                <li><%= link_to section.name, articles_section_path(section) %></li>
              <% end %>

              <li>
                <div id="dropdown-navbar" class="btn-group" role="group">
                  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <b>Otras Secciones</b>
                    <span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu">
                    <% last_sections.each do |section| %>
                      <li><%= link_to section.name, articles_section_path(section) %></li>
                    <% end %>
                  </ul>
                </div>
              </li>
            <% end %>
          </ul>

          <ul class="nav navbar-nav navbar-desktop">
            <li><%= link_to 'Tapa', root_path %></li>
            <%if sections.count < 5 %>
              <% sections.each do |section| %>
                <li><%= link_to section.name, articles_section_path(section) %></li>
              <% end %>
            <% else %>
              <% first_sections = sections.first(5) %>
              <% last_sections = sections.reject { |section| first_sections.include?(section) } %>

              <% first_sections.each do |section| %>
                <li><%= link_to section.name, articles_section_path(section) %></li>
              <% end %>

              <li>
                <div id="dropdown-navbar" class="btn-group" role="group">
                  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <b>Otras Secciones</b>
                    <span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu">
                    <% last_sections.each do |section| %>
                      <li><%= link_to section.name, articles_section_path(section) %></li>
                    <% end %>
                  </ul>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </div>
</div>